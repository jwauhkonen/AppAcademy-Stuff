	<input type="hidden"
	       name="authenticity_token"
		   value="<%= form_authenticity_token %>">

		  
    <label for="album_band">Band</label>
		<select name="album[band_id]", id="album_band">
			<%Band.all.each do |band|%>
				<option value="<%= band.id %>"<%= @band == band ? "selected" : ""%>><%= band.name%></option>
			<% end %>
					
		<select><br>
		   
	<label for="album_title">Title</label>
		<input name="album[title]", id="album_title", value="<%= @album.title %>"><br>
		
	<input type="radio" name="album[category]" id="album_category_studio" value="studio" checked="checked">
	<label for="album_category_studio">Studio</label><br>
	
	<input type="radio" name="album[category]" id="album_category_live" value="live">
	<label for="album_category_live">Live</label><br>
	
		
	<input type="submit" value="Submit!">