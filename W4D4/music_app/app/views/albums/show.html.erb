<h1><%= link_to @album.band.name, band_url(@album.band)%></h1>

<h2><%= @album.title %> (<%= @album.category %>)</h2>

<h3>Tracks</h3>

<ol>
	<% @tracks.each do |track| %>
		<li><%= link_to track.title, track_url(track) %> (<%= track.category %>)</li>
	<% end %>
</ol>	

<br><br><br>

<%= link_to "New Track", new_album_track_url(@album) %><br>
<%= link_to "Edit Album Info", edit_album_url(@album) %><br>
<%= button_to "Delete Album", album_url(@album), method: :delete %>