<% @cat.persisted? ? form_request = "patch" : form_request = "post" %>
<% url = @cat.persisted? ? cat_url(@cat) : cats_url %>

<form action="<%=url%>" method="post">
  <input type="hidden" name="_method" value="<%= form_request %>">
  
  <label for="cat_name">Cat name</label>
  <input name="cat[name]" id="cat_name" type="text" value="<%=@cat.name%>"><br>
  
  Cat sex:
  <label for="cat_sex">Male</label>
  <input name="cat[sex]" id="cat_sex_m" type="radio" value="M"
  <%= @cat.sex == "M" ? "checked" : "" %>>
  
  <label for="cat_sex">Female</label>
  <input name="cat[sex]" id="cat_sex_f" type="radio" value="F"
  <%= @cat.sex == "F" ? "checked" : "" %>><br>
  
  <label for="cat_color">Color</label>
  
  <select name="cat[color]">
    <option value = "black"<%= @cat.color == 'black' ? "selected" : ""%>>Black
</option> 
    
    <option value = "white"<%= @cat.color == 'white' ? "selected" : ""%>>White
    </option>
    
    <option value = "brown"<%= @cat.color == 'brown' ? "selected" : ""%>>Brown
    </option> 
    
    <option value = "gray"<%= @cat.color == 'gray' ? "selected" : ""%>>Gray
    </option> 
    
    <option value = "orange"<%= @cat.color == 'orange' ? "selected" : ""%>>Orange
   </option> 
    
    <option value = "red"<%= @cat.color == 'red' ? "selected" : ""%>>Red
    </option> 
     
    <option value = "green"<%= @cat.color == 'green' ? "selected" : ""%>>Green
    </option> 
  </select><br>
  
  <label for="cat_birth_date">Birthday</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" 
   value="<%=@cat.birth_date%>"></input><br>
  
  <label>Cat story
    <textarea name=cat[description] rows="20" cols="80"><%=@cat.description%></textarea><br>
  </label>
  
  <input type="submit" value="Submit!">
  
</form>